@model MvcForum.ViewModel.CreateThreadViewModel
           
@{
    ViewBag.Title = "Create Thread";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm(new { forumId = Model.TheForum.ForumId}))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create Thread</legend>
                
        <div class="editor-label">
            @Html.LabelFor(model => model.TheThread.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TheThread.Title)
            @Html.ValidationMessageFor(model => model.TheThread.Title)
        </div>       
        <div class="editor-field">
            @Html.EditorFor(model => model.ThePost.PostContent)
            @Html.ValidationMessageFor(model => model.ThePost.PostContent)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Threads", "Index", new { id = Model.TheForum.ForumId })
</div>
